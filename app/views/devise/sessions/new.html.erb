<h2>Iniciar Sesion</h2>

<div class="mb-5">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, label: "Correo",
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email" } %>
    <%= f.input :password, label: "ContraseÃ±a",
                required: false,
                input_html: { autocomplete: "current-password" } %>
    <%= f.input :remember_me, label: "Recuerdame", as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Entrar", class: 'btn btn-primary' %>
  </div>
<% end %>

<div class="social-login">
  <%= button_to user_google_oauth2_omniauth_authorize_path, 
      class: "btn btn-google",
      data: { turbo: false },
      method: :post do %>
    <i class="fab fa-google"></i> Sign in with Google
  <% end %>
</div>

<%= render "devise/shared/links" %>

 </div>
