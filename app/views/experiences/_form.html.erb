<div class="back-button-container">
</div>

<%= simple_form_for @experience do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :availability %>
    <%= f.input :address %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>

  <div class="form-actions">
    <% if current_user == @experience.user %>

      <%= link_to experience_path(@experience), class: 'btn btn-secondary' do %>
        <i class="fas fa-arrow-left"></i>
      <% end %>

      <%= link_to @experience, data: { turbo_method: :delete, confirm: '¿Estás seguro de que quieres eliminar esta experiencia?' }, class: 'btn btn-danger' do %>
        <i class="fas fa-trash-alt"></i>
      <% end %>
    <% end %>

    <%= f.submit "Actualizar Experiencia", class: 'btn btn-primary' %>
  </div>
<% end %>
