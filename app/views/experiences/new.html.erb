<div class="form-title">
  <h1>Crear Nueva Experiencia</h1>
</div>
<div class="back-button-container">

</div>

<%= simple_form_for @experience do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :availability %>
    <%= f.input :address,
    input_html: {data: { address_autocomplete_target: "address"}, class: "mapboxgl-ctrl-geocoder d-none"  },
    wrapper_html: {data: {
                    controller: "address-autocomplete",
                    address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]
                    }}%>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  </div>

  <div class="form-actions">
    <%= f.submit "Crear Experiencia", class: 'btn btn-primary' %>
    <% if current_user == @experience.user %>
      <%= link_to 'Eliminar', @experience, method: :delete, data: { confirm: '¿Estás seguro de que quieres eliminar esta experiencia?' }, class: 'btn btn-danger' %>

      <%= link_to 'Volver a la experiencia', experience_path(@experience), class: 'btn btn-secondary' %>
</div>
    <% end %>
  </div>
<% end %>
