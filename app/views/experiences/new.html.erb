<div class="form-title">
  <h1>Crear Nueva Experiencia</h1>
</div>
<div class="back-button-container">

</div>

<%= simple_form_for @experience do |f| %>
  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :availability %>
    <%= f.input :address,
    input_html: {data: { address_autocomplete_target: "address"}, class: "mapboxgl-ctrl-geocoder d-none"  },
    wrapper_html: {data: {
                    controller: "address-autocomplete",
                    address_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]
                    }}%>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>
    <%= f.submit "Crear Experiencia", class: 'btn btn-primary' %>
  </div>
<% end %>
