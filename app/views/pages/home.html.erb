<script>
    let ticketCount = 1;

    function increaseTicketCount() {
        ticketCount++;
        document.getElementById("ticket-count").innerText = ticketCount;
    }

    function decreaseTicketCount() {
        if (ticketCount > 1) {
            ticketCount--;
            document.getElementById("ticket-count").innerText = ticketCount;
        }
    }
