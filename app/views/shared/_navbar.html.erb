<div class="navbar navbar-expand-sm navbar-light navbar-lewagon mb-3">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag "logo2.png" %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>

          <li class="nav-item active">
            <%= link_to "Menú principal", root_path, class: "nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Mis Experiencias", experiences_path, class: "nav-link" %>
          </li>

          <li class="nav-item">
            <%= link_to "Mis Reservas", my_bookings_path, class: "nav-link" %>
          </li>

          <li class="nav-item dropdown">
            <a href="#" class="avatar" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <% if current_user.avatar_url.present? %>
                <%= image_tag current_user.avatar_url, class: "avatar", alt: "dropdown menu" %>
              <% else %>
                <%= image_tag "https://media.licdn.com/dms/image/v2/D4E03AQFNa01KPLLA3A/profile-displayphoto-shrink_400_400/profile-displayphoto-shrink_400_400/0/1730514773761?e=1735776000&v=beta&t=jMuMjmFo6ukQQirpqrsGnToufLk9DzprRHdflfYrPmc", class: "avatar", alt: "dropdown menu" %>
              <% end %>
            </a>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Mi Perfil", profile_path, class: "dropdown-item" %>
              <%= link_to "Crear una experiencia", new_experience_path, class: "dropdown-item" %>
              <%= link_to "Cerrar sesión", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
            </div>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "Iniciar sesión", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
